<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#999999</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#00FF00</item>
    </style>

    <style name="team">
        <item name="android:padding">4dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#dcdcdc</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">#464646</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="score">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">#dcdcdc</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="button_score_left">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">#dcdcdc</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">#464646</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button_score_right">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">#dcdcdc</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">#464646</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button_bottom">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">#dcdcdc</item>
        <item name="android:textColor">#464646</item>
    </style>

</resources>